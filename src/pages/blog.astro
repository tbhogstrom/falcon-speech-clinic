---
import Layout from '../layouts/Layout.astro';
import WaveformBackground from '../components/WaveformBackground.astro';
---

<Layout title="Blog">
  <div class="relative">
    <WaveformBackground client:load />
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-sky-900 mb-4">Blog</h1>
        <p class="text-xl text-gray-600">
          Insights and updates from our speech therapy experts
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Blog post cards -->
      </div>
    </div>
  </div>
</Layout> 
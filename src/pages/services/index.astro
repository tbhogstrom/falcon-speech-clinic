---
import Layout from '../../layouts/Layout.astro';
import ServiceList from '../../components/ServiceList.astro';
import WaveformBackground from '../../components/WaveformBackground';

---

<Layout 
  title="Our Services"
  description="Comprehensive speech therapy services in Portland, Oregon. From early intervention to specialized support for all communication needs."
>
  <WaveformBackground client:load />
  
  <div class="bg-sky-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-sky-900 mb-4">Our Services</h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Comprehensive speech and language therapy services tailored to meet the unique needs of children and adolescents in Portland, Oregon.
        </p>
      </div>

      <ServiceList />

      <div class="mt-16 text-center">
        <h2 class="text-2xl font-bold text-sky-900 mb-6">Ready to Get Started?</h2>
        <div class="flex justify-center space-x-4">
          <a
            href="/screening"
            class="bg-sky-600 text-white px-8 py-3 rounded-full hover:bg-sky-700 transition"
          >
            Schedule a Free Screening
          </a>
          <a
            href="/contact"
            class="bg-yellow-500 text-sky-900 px-8 py-3 rounded-full hover:bg-yellow-400 transition"
          >
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
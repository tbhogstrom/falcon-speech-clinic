---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.tsx';
import { ViewTransitions } from 'astro:transitions';
import WaveformBackground from '../components/WaveformBackground.tsx';

interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "Specialized speech therapy services for children and adolescents in Portland, Oregon"
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Falcon Speech Therapy</title>
    <ViewTransitions />
  </head>
  <body class="min-h-screen flex flex-col bg-gray-50">
    <Navbar client:load />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer client:load />
  </body>
</html>
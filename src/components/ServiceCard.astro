---
interface Props {
  title: string;
  description: string;
  icon: any;
}

const { title, description, icon: Icon } = Astro.props;
---

<div class="bg-white p-6 rounded-lg shadow-lg">
  <Icon class="h-12 w-12 text-sky-600 mb-4" />
  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  <p class="text-gray-600">
    {description}
  </p>
</div>
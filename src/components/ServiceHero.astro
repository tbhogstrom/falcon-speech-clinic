---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
}

const { title, description, imageUrl } = Astro.props;
---

<div class="relative py-16 bg-sky-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="relative">
      <img
        src={imageUrl}
        alt={title}
        class="w-full h-64 object-cover rounded-xl shadow-lg mb-8"
      />
      <div class="text-center">
        <h1 class="text-4xl font-bold text-sky-900 mb-4">{title}</h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">{description}</p>
      </div>
    </div>
  </div>
</div>